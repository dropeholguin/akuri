<%= form_for([@establishment, @comment]) do |f| %>
  <% if comment.errors.any? %>
    <div class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
          <% @comment.errors.full_messages.each do |message| %>
          <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    </div>
  <% end %>
  <form>
    <div class="row">
      <div class="form-group col-xs-6 col-md-8">
        <label for="exampleInputEmail1">Score</label>
        <div id="star-rating"></div>
      </div>
    </div>
    
    <div class="row">
      <div class="form-group col-xs-6 col-md-8">
        <label for="exampleInputPassword1">Body</label>
        <%= f.text_area :body, class: "form-control", placeholder: "Body"%>
      </div>
    </div>
    <div class="row">
      <div class="form-group col-xs-4">
        <%= f.button "Create", class: 'btn btn-default btn-lg btn-block', data: { disable_with: "<i class='fa fa-spinner fa-spin'></i> Creating..." } %>
      </div>
    </div>
  </form>
<% end %>

<script>
  $('#star-rating').raty({
    starOn: '<%= image_path('star-on.png') %>',
    starOff: '<%= image_path('star-off.png') %>',
    starHalf: '<%= image_path('star-half.png') %>',
    path: '',
    scoreName: 'comment[score]'
  });
</script>
