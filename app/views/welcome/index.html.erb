<title>Clean Blog</title>

<%= render 'shim' %>
<%= render 'navigation' %>
<%= render 'header' %>

<!-- Main Content -->
<div class="container">
    <div class="row">
        <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
            <div class="row">
              <% @establishments.each do |establishment| %>
                <div class="col-lg-4">
                  <%= image_tag establishment.image.url(:medium) ,class: "img-rounded", height: '250', width: '250' %>
                  <h3 class="title"><%= establishment.name %></h3>
                  <p><%= establishment.description %></p>
                  <p><a><%= link_to 'View details', establishment, class: "btn btn-default"%></a></p>
                </div><!-- /.col-lg-4 -->
              <% end %>
            </div><!-- /.row -->
            <!-- Pager   -->
            <ul class="pager">
                <li class="next">
                    <%= link_to "all Restaurants", establishments_path %>
                </li>
            </ul>
        </div>
    </div>
</div>

<br>
