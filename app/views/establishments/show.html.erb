<div class="thumbnail">
  <div class="row">
    <div class="col-md-6">
      <center><%= image_tag @establishment.image.url(:medium),class: "img-rounded", height: '300', width: '300'%></center>  
      <div class="caption">
        <h3><%= @establishment.name %></h3>
        <hr>
        <h4>
          <strong><%= @establishment.description %></strong>
        </h4>
        <p>
          <strong>Kind of food:</strong>
          <%= @establishment.kind_of_food %>
        </p>
        <p>
          <strong>Website:</strong>
          <%= @establishment.website %>
        </p>
        <p>
          <strong>Phone:</strong>
          <%= @establishment.phone %>
        </p>
        <p><%= link_to 'Back', establishments_path, class: "btn btn-danger"%></p> 
      </div>
    </div>
    <div class="col-md-6">
      <h3>Location</h3>
      <hr>
      <% @locations.each do |location| %>
        <div>
          <h4><b><%= location.address %></b></h4>
        </div>
      <% end %>
      <div class="row">
        <div style='width: 800px;'>
          <div id="map" style='width: 500px; height: 420px;'></div>
        </div>
          <script type="text/javascript">
            handler = Gmaps.build('Google');
            handler.buildMap({ provider: {}, internal: {id: 'map'}}, function(){
              markers = handler.addMarkers(<%=raw @hash.to_json %>);
              handler.bounds.extendWith(markers);
              handler.fitMapToBounds();
              handler.getMap().setZoom(18);
            });
          </script>
      </div>
    </div>
  </div>
</div>